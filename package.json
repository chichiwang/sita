{
  "name": "@chichiwang/sita",
  "version": "0.0.1",
  "description": "Koa2 powered Node server",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chichiwang/sita"
  },
  "scripts": {
    "beautify": "prettier --trailing-comma all --parser flow --single-quote --write \"{src,__{tests,mocks}__}/**/*.js\"",
    "build": "npm run clean && npm run build:js",
    "build:js": "NODE_ENV=production babel src --out-dir dist",
    "clean": "rm -rf dist/",
    "debug": "nodemon --exec babel-node debug ./src/index.js",
    "flow": "flow",
    "lint": "eslint -c .eslintrc ./src --ext .js,.jsx,.es6,.coffee",
    "lint:changed": "eslint -c .eslintrc --cache ./src --ext .js,.jsx,.es6,.coffee",
    "start": "nodemon --exec babel-node ./src/index.js",
    "test": "jest",
    "test:changed": "jest -o",
    "test:coverage": "jest --coverage"
  },
  "author": "Chi-chi Wang <chichi@wangchiyi.com>",
  "license": "ISC",
  "dependencies": {
    "chalk": "^2.3.0",
    "koa": "^2.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-es2015-duplicate-keys": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.59.0",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "prettier": "^1.8.2"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "src"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
