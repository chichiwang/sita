{
  "name": "@chichiwang/sita",
  "version": "0.0.1",
  "description": "Koa2 powered Node server",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chichiwang/sita"
  },
  "scripts": {
    "build": "npm run clean && npm run build:js",
    "build:js": "NODE_ENV=production babel src --out-dir dist",
    "clean": "rm -rf dist/",
    "debug": "nodemon --exec babel-node debug ./src/index.js",
