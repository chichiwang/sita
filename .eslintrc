{
  "extends": [
    "plugin:flowtype/recommended",
    "eslint-config-airbnb",
    "prettier"
  ],
  "plugins": [
    "flowtype",
    "fp"
  ],
  "rules": {
    "fp/no-mutation": [2, {
      "commonjs": true,
      "allowThis": true,
      "exceptions": [
        { "object": "ctx", "property": "body" },
        { "object": "ctx", "property": "koa" }
      ]
    }],
    "prefer-arrow-callback": ["error", {
      "allowNamedFunctions": true
    }]
  },
  "env": {
    "node": true,
    "jest": true
  }
}
