{
  "extends": [
    "plugin:flowtype/recommended",
    "eslint-config-airbnb",
    "prettier"
  ],
  "plugins": [
    "flowtype",
    "fp"
  ],
  "rules": {
    "fp/no-mutation": 2,
    "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }]
  },
  "env": {
    "node": true,
    "jest": true
  }
}
